# Production Environment Variables
# Copy this to .env and update values for your hosting environment

# Django Settings
DEBUG=False
SECRET_KEY=your-production-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com,your-server-ip

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:1300,https://your-domain.com,http://your-domain.com

# Database Configuration (optional - defaults to SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Email Settings (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# GitHub Webhook Secret (for webhook.sh)
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here

# Logging Level
LOG_LEVEL=INFO

# Time Zone
TIME_ZONE=UTC
